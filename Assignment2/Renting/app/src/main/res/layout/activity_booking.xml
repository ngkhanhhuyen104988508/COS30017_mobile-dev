<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".activities.BookingActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp"
        app:title="@string/booking_title"
        app:titleTextColor="@color/text_white"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:theme="@style/ThemeOverlay.MusicStudioRental.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Instrument Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInstrumentSummary"
                style="@style/InstrumentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Instrument Thumbnail -->
                    <ImageView
                        android:id="@+id/imageInstrumentThumb"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/cd_instrument_image"
                        tools:src="@drawable/guitar" />

                    <!-- Instrument Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textInstrumentNameSummary"
                            style="@style/HeadingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            tools:text="Acoustic Guitar Pro" />

                        <RatingBar
                            android:id="@+id/ratingBarSummary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:progressTint="@color/rating_star"
                            style="?android:attr/ratingBarStyleSmall"
                            tools:rating="4.5" />

                        <TextView
                            android:id="@+id/textPriceSummary"
                            style="@style/PriceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            tools:text="50 credits/month" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Customer Information Section -->
            <TextView
                android:id="@+id/sectionCustomerInfo"
                style="@style/SubheadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_customer_info"
                android:layout_marginTop="8dp" />

            <!-- Customer Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCustomerName"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/username"

                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editCustomerName"
                    style="@style/InputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contact Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutContact"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/mail"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editContact"
                    style="@style/InputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Rental Summary Section -->
            <TextView
                android:id="@+id/sectionRentalSummary"
                style="@style/SubheadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_rental_summary"
                android:layout_marginTop="8dp" />

            <!-- Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRentalSummary"
                style="@style/DetailCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Monthly Cost Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            style="@style/BodyText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_monthly_cost" />

                        <TextView
                            android:id="@+id/textMonthlyCost"
                            style="@style/BodyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="50 credits" />

                    </LinearLayout>

                    <!-- Available Credits Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            style="@style/BodyText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_available_credits" />

                        <TextView
                            android:id="@+id/textAvailableCredits"
                            style="@style/BodyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="120 credits" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="8dp" />

                    <!-- Remaining Credits Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            style="@style/BodyText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_remaining_credits"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textRemainingCredits"
                            style="@style/PriceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="70 credits" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <Button
                android:id="@+id/buttonConfirmBooking"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/button_confirm_booking"
                app:icon="@android:drawable/ic_input_add" />

            <Button
                android:id="@+id/buttonCancelBooking"
                style="@style/SecondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/button_cancel" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>