<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".activities.MainActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp"
        app:title="@string/main_title"
        app:titleTextColor="@color/text_white"
        app:theme="@style/ThemeOverlay.MusicStudioRental.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Instrument Image Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInstrumentImage"
                style="@style/InstrumentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/imageInstrument"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/cd_instrument_image"
                    tools:src="@drawable/guitar" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Instrument Name -->
            <TextView
                android:id="@+id/textInstrumentName"
                style="@style/HeadingText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardInstrumentImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Acoustic Guitar Pro" />

            <!-- Rating Bar -->
            <RatingBar
                android:id="@+id/ratingBarInstrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:progressTint="@color/rating_star"
                style="?android:attr/ratingBarStyleSmall"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                app:layout_constraintTop_toBottomOf="@id/textInstrumentName"
                app:layout_constraintStart_toStartOf="parent"
                tools:rating="4.5" />

            <!-- Rating Text -->

            <!-- Divider 1 -->

            <TextView
                android:id="@+id/textRatingValue"
                style="@style/BodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toBottomOf="@id/ratingBarInstrument"
                app:layout_constraintStart_toEndOf="@id/ratingBarInstrument"
                app:layout_constraintTop_toTopOf="@id/ratingBarInstrument"
                app:layout_constraintVertical_bias="0.166"
                tools:text="4.5" />

            <View
                android:id="@+id/divider1"
                style="@style/SectionDivider"
                app:layout_constraintTop_toBottomOf="@id/ratingBarInstrument"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Condition Label -->
            <TextView
                android:id="@+id/labelCondition"
                style="@style/SubheadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_condition"
                android:textSize="20sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Condition Radio Group (Multi-choice attribute) -->

            <!-- Divider 2 -->

            <!-- Price -->

            <RadioGroup
                android:id="@+id/radioGroupCondition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelCondition">

                <RadioButton
                    android:id="@+id/radioExcellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:enabled="false"
                    android:text="@string/condition_excellent" />

                <RadioButton
                    android:id="@+id/radioGood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:enabled="false"
                    android:text="@string/condition_good" />

                <RadioButton
                    android:id="@+id/radioFair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:enabled="false"
                    android:text="@string/condition_fair" />

            </RadioGroup>

            <View
                android:id="@+id/divider2"
                style="@style/SectionDivider"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGroupCondition" />

            <TextView
                android:id="@+id/textPrice"
                style="@style/PriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/cash"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="50 credits/month" />

            <!-- Description -->
            <TextView
                android:id="@+id/textDescription"
                style="@style/BodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Professional 6-string acoustic guitar with solid spruce top. Perfect for studio recording and live performance." />

            <!-- Booking Status -->
            <TextView
                android:id="@+id/textBookingStatus"
                style="@style/StatusAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/textDescription"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Status: âœ… Available" />

            <!-- Divider 3 -->
            <View
                android:id="@+id/divider3"
                style="@style/SectionDivider"
                app:layout_constraintTop_toBottomOf="@id/textBookingStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Navigation Container -->
            <LinearLayout
                android:id="@+id/layoutNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Previous Button -->
                <Button
                    android:id="@+id/buttonPrevious"
                    style="@style/NavigationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_previous"
                    android:drawableStart="@android:drawable/ic_media_previous"
                    android:drawablePadding="4dp"
                    android:contentDescription="@string/cd_previous_instrument" />

                <!-- Page Indicator -->
                <TextView
                    android:id="@+id/textPageIndicator"
                    style="@style/CaptionText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    tools:text="1 / 4" />

                <!-- Next Button -->
                <Button
                    android:id="@+id/buttonNext"
                    style="@style/NavigationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_next"
                    android:drawableEnd="@android:drawable/ic_media_next"
                    android:drawablePadding="4dp"
                    android:contentDescription="@string/cd_next_instrument" />

            </LinearLayout>

            <!-- Borrow Button -->
            <Button
                android:id="@+id/buttonBorrow"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/button_borrow"
                android:textSize="18sp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="start"
                app:layout_constraintTop_toBottomOf="@id/layoutNavigation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>