<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================================ -->
    <!-- BUTTON STYLES (Used in multiple activities) -->
    <!-- ============================================ -->

    <!-- Primary Button Style - Used for main actions -->
    <!-- Locations: MainActivity (Borrow), BookingActivity (Confirm, Save) -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:elevation">2dp</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <!-- Secondary Button Style - Used for cancel/back actions -->
    <!-- Locations: MainActivity (Previous/Next), BookingActivity (Cancel) -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <!-- Navigation Button Style - Compact style for prev/next -->
    <!-- Locations: MainActivity navigation buttons -->
    <style name="NavigationButton" parent="SecondaryButton">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minWidth">80dp</item>
    </style>

    <!-- ============================================ -->
    <!-- TEXT STYLES (Used throughout the app) -->
    <!-- ============================================ -->

    <!-- Heading Text Style - Large titles -->
    <!-- Locations: MainActivity (instrument name), BookingActivity (section headers) -->
    <style name="HeadingText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Subheading Text Style - Section headers -->
    <!-- Locations: BookingActivity (Customer Info, Rental Summary sections) -->
    <style name="SubheadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Body Text Style - Regular content -->
    <!-- Locations: MainActivity (description, price), BookingActivity (summary details) -->
    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Caption Text Style - Small secondary info -->
    <!-- Locations: MainActivity (page indicator), BookingActivity (hints) -->
    <style name="CaptionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Price Text Style - Emphasized pricing -->
    <!-- Locations: MainActivity (price display), BookingActivity (cost summary) -->
    <style name="PriceText" parent="BodyText">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- ============================================ -->
    <!-- INPUT FIELD STYLES -->
    <!-- ============================================ -->

    <!-- Text Input Layout Style -->
    <!-- Locations: BookingActivity (all EditText fields) -->
    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Edit Text Style -->
    <!-- Locations: BookingActivity (name, contact fields) -->
    <style name="InputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- ============================================ -->
    <!-- CARD STYLES -->
    <!-- ============================================ -->

    <!-- Instrument Card Style -->
    <!-- Locations: MainActivity (instrument display card) -->
    <style name="InstrumentCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Detail Card Style - Subtle card for sections -->
    <!-- Locations: BookingActivity (summary section) -->
    <style name="DetailCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/background_light</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- ============================================ -->
    <!-- DIVIDER STYLE -->
    <!-- ============================================ -->

    <!-- Section Divider -->
    <!-- Locations: MainActivity, BookingActivity (between sections) -->
    <style name="SectionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- ============================================ -->
    <!-- STATUS TEXT STYLES -->
    <!-- ============================================ -->

    <!-- Available Status Style -->
    <style name="StatusAvailable" parent="CaptionText">
        <item name="android:textColor">@color/success</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Booked Status Style -->
    <style name="StatusBooked" parent="CaptionText">
        <item name="android:textColor">@color/warning</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>