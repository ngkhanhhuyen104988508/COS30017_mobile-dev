<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spider"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/zoneOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <RadioGroup
            android:id="@+id/languageRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp">

            <RadioButton
                android:id="@+id/vietnameseRadio"
                android:layout_width="125dp"
                android:layout_height="38dp"
                android:text="@string/vietnamese"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/englishRadio"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="@string/english"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="193dp"
            android:layout_height="356dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/point"
            android:textSize="47sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/zoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zone"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scoreTextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/climbButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#1d4e89"
                android:text="@string/climb"
                android:textColor="#FFCE54" />

            <Button
                android:id="@+id/fallButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#1d4e89"
                android:text="@string/fall"
                android:textColor="#FFCE54" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:backgroundTint="#1d4e89"
                android:text="@string/reset"
                android:textColor="#FFCE54" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>